 import pandas as pd
import numpy as np
import glob
import os

# === Настройки ===
# Папка с сабмитами:
INPUT_FOLDER = "submissions/"       # <- измени под себя
OUTPUT_FILE = "blend.csv"           # имя итогового файла
TARGET_COLUMN = "prediction"        # имя колонки с таргетом (изменить при необходимости)

# Тип бленда: "mean", "weighted", "median"
BLEND_TYPE = "mean"

# Веса для взвешенного бленда (если нужно)
# длина должна совпадать с числом файлов
WEIGHTS = None  # пример: [0.6, 0.3, 0.1]

# === Код ===
files = sorted(glob.glob(os.path.join(INPUT_FOLDER, "*.csv")))
if not files:
    raise FileNotFoundError("Не найдено файлов .csv в папке " + INPUT_FOLDER)

print(f"Найдено {len(files)} файлов:")
for f in files:
    print(" -", os.path.basename(f))

dfs = [pd.read_csv(f) for f in files]

# Проверка одинаковых ID
base_ids = dfs[0].iloc[:, 0]
for i, df in enumerate(dfs[1:], 1):
    if not all(df.iloc[:, 0] == base_ids):
        raise ValueError(f"Файл {files[i]} имеет другие ID!")

# Стек предсказаний
preds = np.column_stack([df[TARGET_COLUMN].values for df in dfs])

if BLEND_TYPE == "mean":
    blended = preds.mean(axis=1)
elif BLEND_TYPE == "median":
    blended = np.median(preds, axis=1)
elif BLEND_TYPE == "weighted":
    if WEIGHTS is None or len(WEIGHTS) != len(files):
        raise ValueError("Для взвешенного бленда нужно задать WEIGHTS!")
    WEIGHTS = np.array(WEIGHTS) / np.sum(WEIGHTS)
    blended = np.average(preds, axis=1, weights=WEIGHTS)
else:
    raise ValueError("Неверный тип BLEND_TYPE: используйте 'mean', 'weighted' или 'median'.")

# Сохранение
out = dfs[0].copy()
out[TARGET_COLUMN] = blended
out.to_csv(OUTPUT_FILE, index=False)
print(f"\n✅ Бленд сохранён в {OUTPUT_FILE}")
